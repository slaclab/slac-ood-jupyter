
---
cluster: "sdf"
form:
  - jupyter_image
  - commands
  - use_lab
  - use_core_mode
  - slurm_account
  - bc_num_hours
  - num_cores
  - mem
  - num_gpus
  - gpu_type
  - bc_email_on_started
attributes:
  commands:
    widget: text_area
    label: "Commands to initate Jupyter"
  use_lab:
    widget: "check_box"
    label: "Use JupyterLab instead of Jupyter Notebook?"
    help: |
      [JupyterLab] is the next generation of Jupyter, and is completely compatible with existing [Jupyter Notebook]s. Note this requires [JupyterLab] to be [installed].

      [JupyterLab]: https://jupyterlab.readthedocs.io/
      [Jupyter Notebook]: https://jupyter-notebook.readthedocs.io/en/stable/ui_components.html
      [installed]: https://jupyterlab.readthedocs.io/en/stable/getting_started/installation.html
  use_core_mode:
    widget: "check_box"
    label: |
      Disable JupyterLab extensions (Run with --core-mode)
  bc_num_hours:
    widget: "number_field"
    help: |
      Number of hours for which the Jupyter instance will run for
  num_cores:
    widget: "number_field"
    label: "Number of CPU cores"
    value: 1
    help: |
      Number of cpu cores available for Jupyter instance
    min: 1
    max: 44
    step: 1
  mem:
    widget: "number_field"
    label: "Total Memory to allocate"
    value: "2048"
    help:
      Total memory for Jupyter instance in metabytes
    min: 128
    max: 256000
    step: 128
  gpu_type:
    widget: "select"
    label: "GPU Type"
    help: |
      Make and model of GPU(s) to request
    options:
      - [ "Any", "Any" ]
      - [ "Nvidia Geforce 2080Ti", "geforce_rtx_2080_ti" ]
      - [ "Nvidia Geforce 1080Ti", "geforce_gtx_1080_ti" ]
      - [ "Nvidia Tesla V100", "v100" ]
  num_gpus:
    widget: "number_field"
    label: "Number of GPUs"
    value: 0
    help: |
      Number of GPUs requested
    min: 0
    max: 10
    step: 1
  slurm_account:
    label: "Account"
    help: |
      Slurm [Account and Partition] to launch Jupyter on

      [Account and Partition]: https://confluence.slac.stanford.edu/display/SCSPub/Slurm+Batch
    value: "shared"
  jupyter_image:
    widget: "select"
    label: "Jupyter Instance"
    help: |
      Which Jupyter image to run
    options:
      - [ "slac-ml/20200227.0", "module load slac-ml/20200227.0" ]
      - [ "slac-ml/20200211.0", "module load slac-ml/20200211.0" ]
      - [ "scdms/allkernels", "export NOTEBOOK_ROOT=/gpfs/.../cdms/u/$USER\nexport PYTHONUSERBASE=$NOTEBOOK_ROOT/.local\nsource /gpfs/slac/staas/fs1/supercdms/packages/jupyter/venv/bin/activate" ]
      - [ "atlas-jupyter/20200502", "ls /cvmfs/oasis.opensciencegrid.org /cvmfs/atlas.cern.ch /cvmfs/atlas-condb.cern.ch /cvmfs/atlas-nightlies.cern.ch /cvmfs/sft.cern.ch /cvmfs/unpacked.cern.ch /cvmfs/atlas.sdcc.bnl.gov >/dev/null\nexport SINGULARITY_IMAGE_PATH=/cvmfs/atlas.sdcc.bnl.gov/jupyter/t3s/slac/singularity/atlas-slac.sif\nfunction jupyter() { singularity exec --nv -B /cvmfs,/gpfs,/scratch,/nfs,/afs ${SINGULARITY_IMAGE_PATH} jupyter $@; }" ]
      - [ "atlas-jupyter-w-slurm-cli/20200714", "ls /cvmfs/oasis.opensciencegrid.org /cvmfs/atlas.cern.ch /cvmfs/atlas-condb.cern.ch /cvmfs/atlas-nightlies.cern.ch /cvmfs/sft.cern.ch /cvmfs/unpacked.cern.ch /cvmfs/atlas.sdcc.bnl.gov >/dev/null\nexport T3repo=/cvmfs/atlas.sdcc.bnl.gov/jupyter/t3s\nexport SINGULARITY_IMAGE_PATH=${T3repo}/slac/singularity/atlas-slac-w-slurm-cli-20200714.sif\nfunction jupyter() { singularity exec --nv -B /cvmfs,/gpfs,/scratch,/nfs,/afs,/u,/etc/slurm,/opt/slurm,/var/run/munge,/bin/modulecmd -B ${T3repo}/slac/singularity/99-zatlas.sh:/.singularity.d/env/99-zatlas.sh ${SINGULARITY_IMAGE_PATH} jupyter $@; }\n# -B /usr/lib64/libmunge.so.2,/usr/lib64/tcl8.5,/usr/lib64/libtcl8.5.so,/usr/share/tcl8.5,/usr/lib64/libexpect5.45.so" ]
      - [ "neutrino-jupyter/ub18.04-cuda10.2-extra-ME", "export SINGULARITY_IMAGE_PATH=/gpfs/slac/staas/fs1/g/neutrino/images/ub18.04-cuda10.2-extra-ME.sif\nexport MY_SINGULARITY_WORKDIR=/gpfs/slac/staas/fs1/g/neutrino/$USER\nexport PYTHONPATH=\"\"\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/sdf/group,/lscratch ${SINGULARITY_IMAGE_PATH} jupyter $@ --notebook-dir $MY_SINGULARITY_WORKDIR; }" ]
      - [ "neutrino-jupyter/ub18.04-cuda10.2-extra-edepsim", "export SINGULARITY_IMAGE_PATH=/gpfs/slac/staas/fs1/g/neutrino/images/larcv2_ub18.04-cuda10.2-extra-edepsim.sif\nexport MY_SINGULARITY_WORKDIR=/gpfs/slac/staas/fs1/g/neutrino/$USER\nexport PYTHONPATH=\"\"\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/sdf/group,/lscratch ${SINGULARITY_IMAGE_PATH} jupyter $@ --notebook-dir $MY_SINGULARITY_WORKDIR; }" ]
      - [ "neutrino-jupyter/ub18.04-cuda10.2-extra", "export SINGULARITY_IMAGE_PATH=/gpfs/slac/staas/fs1/g/neutrino/images/larcv2_ub18.04-cuda10.2-extra.sif\nexport MY_SINGULARITY_WORKDIR=/gpfs/slac/staas/fs1/g/neutrino/$USER\nexport PYTHONPATH=\"\"\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/sdf/group,/lscratch ${SINGULARITY_IMAGE_PATH} jupyter $@ --notebook-dir $MY_SINGULARITY_WORKDIR; }" ]
      - [ "neutrino-jupyter/ub18.04-gpu-ana0-ml-larcv2-lab", "export SINGULARITY_IMAGE_PATH=/gpfs/slac/staas/fs1/g/neutrino/images/ub18.04-gpu-ana0-ml-larcv2-lab.sif\nexport MY_SINGULARITY_WORKDIR=/gpfs/slac/staas/fs1/g/neutrino/$USER\nexport PYTHONPATH=\"\"\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/sdf/group,/lscratch ${SINGULARITY_IMAGE_PATH} jupyter $@ --notebook-dir $MY_SINGULARITY_WORKDIR; }" ]
      - [ "neutrino-jupyter/ub18.04-gpu-ana0-ml-larcv2", "export SINGULARITY_IMAGE_PATH=/gpfs/slac/staas/fs1/g/neutrino/images/ub18.04-gpu-ana0-ml-larcv2.sif\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/nfs,/afs ${SINGULARITY_IMAGE_PATH} jupyter $@; }" ]
      - [ "neutrino-jupyter/ub18.04-gpu-ana0-mn",  "export SINGULARITY_IMAGE_PATH=/gpfs/slac/staas/fs1/g/neutrino/images/ub18.04-gpu-ana0-mn.sif\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/nfs,/afs ${SINGULARITY_IMAGE_PATH} jupyter $@; }" ]
      - [ "lsst/r18_1_0",  "module load lsst/r18_1_0" ]
      - [ "lsst/r19_0_0",  "module load lsst/r19_0_0" ]
      - [ "Custom Singularity Image...", "export SINGULARITY_IMAGE_PATH=/afs/slac/package/singularity/images/slac-ml/20200211.0/slac-jupyterlab@20200211.0.sif\nfunction jupyter() { singularity exec --nv -B /gpfs,/scratch,/nfs,/afs ${SINGULARITY_IMAGE_PATH} jupyter $@; }

" ]
      - [ "Custom Conda Environment...", "export CONDA_PREFIX=/gpfs/slac/cryo/fs1/g/C091/miniconda3\nexport PATH=${CONDA_PREFIX}/bin/:$PATH\nsource ${CONDA_PREFIX}/etc/profile.d/conda.sh\nconda env list\nconda activate tester" ]
